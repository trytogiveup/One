        <style>
            .navlist{
                padding: 0;              
                position: relative;
                top: 10px;
                margin:0 auto;
                width: 100%;
                text-align: center;
            }
            a{
                text-decoration: none;
                color: white;
            }
            .navlist a{
                margin-left: 60px;
                color: #444;
            }
            .expend{
              
                height: 0px;
                background-color: crimson;
                overflow: hidden;
                position:relative;
                top: 30px;
                width: 100%;
                
                
            }
            .expdiv{
                height: 200px;
                width: 500%;  /*通过设置这里的500%和expdiv-list的float和width从而使第一个expdiv-list在当前而其他的都浮动在右侧隐藏*/
            }
            .expdiv-list{
                width:20%;
                text-align: center;
                float: left;
                line-height: 180px;
                color: white;
                
            }
            .expend .close-btn{
                width:240px;
                height: 20px; 
                background:url("../img/20150610210829_B4xnw.jpeg") no-repeat -480px -1449px;
                position: absolute;
                left: 50%;
                bottom: -1px;
                margin-left: -120px;
                cursor:pointer;
            }
        </style>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script>
            $(function(){
                
            
                
                  $("#menuList").on("click","a",function(){
                    if($(this).hasClass("btn-active")){
                        $("#closeBtn").click();
                        return false;
                    }
                    var curIndex = $(this).index();
                    var mlvalue="-"+curIndex*100+"%";//根据a的索引值判断二级菜单单项需要margin-left的距离，以显示到屏幕里
                    if($("#expendZone").hasClass("active"))
                        {
                             $("#expendZone .expdiv").animate({marginLeft:mlvalue});
                        }
                    else
                        {
                             $("#expendZone .expdiv").css({marginLeft:mlvalue});
                             $("#expendZone").animate({height:"200px"}).addClass("active");
                        }
                    $(this).addClass("btn-active").siblings().removeClass("btn-active");
                    return false;
                   
                });
                $("#closeBtn").on("click",function(){
                    
                    
                    $("#expendZone").animate({height:"0"}, function(){
                        $(this).removeClass("active");
                        $("#menuList .btn-active").removeClass("btn-active");
                    });
                    
                  
                });
            })
           
        </script>
        
    </head>
