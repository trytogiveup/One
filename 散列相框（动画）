            }
            .wrap{
                width: 100%;
                height:480px;
                position: absolute;
                top:50%;
                margin-top: -240px;/*设置垂直居中*/
                background-image:url('../img/Background.jpg');
                background-repeat: no-repeat;
                overflow: hidden;
                perspective: 800px;
            }
            .photo{
                width: 260px;
                height: 320px;
                position: absolute;
                z-index: 1;
                box-shadow: 0 0 1px rgba(0,0,0,.01);/*最后一个值为透明度*/
                transition: all .5s;
                
            }
           .side{
                width: 100%;
                height: 100%;
                background-color: #eee;
                position: absolute;
                top: 0;
                right:0;
               padding: 20px;
               box-sizing: border-box;/*div中的content和padding都会在规定的width和height之内*/
            }
           .side-front{
                
            }
           .image{
                width: 100%;
                height: 250px;
                line-height: 250px;
                overflow: hidden;
            }
           .image img{
                width: 100%;
            }
           .caption{
                text-align: center;
                font-size: 16px;
                line-height: 50px;
            }
            .side-back{
                
            }
            .desc{
                color: #666;
                font-size: 14px;
                line-height: 1.5em;
            }
            .photo_center{/*设置水平垂直居中*/
                left: 50%;
                top:50%;
                margin: -160px 0 0 -130px;
                z-index: 999;
            }
            .photo-wrap{
                position: absolute;
                width: 100%;
                height: 100%;
                transform-style:preserve-3d;/*使被转换的子元素保留其 3D 转换*/
                transition: all .6s;
            }
            .side-front{
                
                transform: rotateY(0deg);
            }
            .side-back{
                 transform: rotateY(180deg);
            }
           
